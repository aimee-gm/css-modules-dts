{
  "name": "css-modules-dts",
  "version": "0.1.1",
  "description": "Generates TypeScript declaration files for CSS Modules",
  "keywords": [
    "typescript",
    "declaration",
    "css",
    "modules",
    "dts"
  ],
  "type": "module",
  "bin": {
    "css-modules-dts": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "prepare": "husky install",
    "test": "node --experimental-vm-modules ./node_modules/.bin/jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aimee-gm/css-modules-dts.git"
  },
  "author": "Aimee Gamble-Milner (https://github.com/aimee-gm)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/aimee-gm/css-modules-dts/issues"
  },
  "homepage": "https://github.com/aimee-gm/css-modules-dts#readme",
  "dependencies": {
    "chokidar": "^3.5.3",
    "css-tree": "^2.3.1",
    "glob": "^10.3.4",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@tsconfig/node18": "^18.2.1",
    "@tsconfig/strictest": "^2.0.2",
    "@types/css-tree": "^2.3.2",
    "@types/jest": "^29.5.4",
    "@types/mock-fs": "^4.13.1",
    "@types/node": "^20.8.0",
    "@types/yargs": "^17.0.24",
    "husky": "^8.0.3",
    "jest": "^29.6.4",
    "lint-staged": "^14.0.1",
    "mock-fs": "^5.2.0",
    "prettier": "3.0.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "lint-staged": {
    "*.{js,css,md,ts,cjs}": "prettier --write"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "engines": {
    "node": ">=18"
  }
}
